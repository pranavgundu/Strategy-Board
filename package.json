{
  "name": "strategy-board",
  "version": "1.0.0",
  "description": "The Digital Strategy Whiteboard for FRC",
  "homepage": "https://github.com/pranavgundu/strategy-board",
  "author": {
    "name": "Pranav Gundu",
    "email": "pranav@strategyboard.app"
  },
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite --host",
    "build": "tsx scripts/commit.ts && tsc && vite build",
    "preview": "vite preview --host",
    "spell": "cspell \"**/*.{ts,tsx,js,jsx,html,md}\"",
    "assets": "pnpm exec capacitor-assets generate --iconBackgroundColor '#18181b' --iconBackgroundColorDark '#18181b' --splashBackgroundColor '#18181b' --splashBackgroundColorDark '#18181b'",
    "cap:sync": "pnpm run build && pnpm exec cap sync",
    "cap:open:ios": "pnpm exec cap open ios",
    "cap:open:android": "pnpm exec cap open android",
    "cap:run:ios": "pnpm run cap:sync && pnpm exec cap run ios",
    "cap:run:android": "pnpm run cap:sync && pnpm exec cap run android",
    "electron:dev": "concurrently \"vite --host\" \"wait-on http://localhost:5173 && VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "electron:build": "pnpm run build && electron-builder",
    "electron:build:mac": "pnpm run build && electron-builder --mac",
    "electron:build:win": "pnpm run build && electron-builder --win",
    "electron:build:linux": "pnpm run build && electron-builder --linux",
    "electron:build:all": "pnpm run build && electron-builder --mac --win --linux"
  },
  "build": {
    "appId": "com.strategyboard.app",
    "productName": "Strategy Board",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "favicon/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "favicon/icon-512.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "favicon/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "favicon/icon-512.png",
      "category": "Utility",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "favicon/favicon.ico"
    }
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.5",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.10.8",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cspell": "^9.6.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^9.0.3",
    "workbox-window": "^7.4.0"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.5",
    "@capacitor/core": "^7.4.5",
    "@capacitor/ios": "^7.4.5",
    "@tailwindcss/vite": "^4.1.18",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "es-abstract": "^1.24.1",
    "firebase": "^12.8.0",
    "idb-keyval": "^6.2.2",
    "jspdf": "^4.0.0",
    "marked": "^17.0.1",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.4",
    "tailwindcss": "^4.1.18",
    "uuid": "^13.0.0"
  }
}
