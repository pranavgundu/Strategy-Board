{
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsx scripts/commit.ts && tsc && vite build",
    "preview": "vite preview --host",
    "spell": "cspell \"**/*.{ts,tsx,js,jsx,html,md}\"",
    "assets": "pnpm exec capacitor-assets generate --iconBackgroundColor '#18181b' --iconBackgroundColorDark '#18181b' --splashBackgroundColor '#18181b' --splashBackgroundColorDark '#18181b'",
    "cap:sync": "pnpm run build && pnpm exec cap sync",
    "cap:open:ios": "pnpm exec cap open ios",
    "cap:open:android": "pnpm exec cap open android",
    "cap:run:ios": "pnpm run cap:sync && pnpm exec cap run ios",
    "cap:run:android": "pnpm run cap:sync && pnpm exec cap run android"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^7.4.4",
    "@types/marked": "^5.0.2",
    "@types/node": "^24.10.7",
    "autoprefixer": "^10.4.23",
    "cspell": "^9.6.0",
    "postcss": "^8.5.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/ios": "^7.4.4",
    "@tailwindcss/vite": "^4.1.18",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "es-abstract": "^1.24.1",
    "firebase": "^12.7.0",
    "idb-keyval": "^6.2.2",
    "jspdf": "^4.0.0",
    "marked": "^17.0.1",
    "qr-scanner": "^1.4.2",
    "qrcode": "^1.5.4",
    "tailwindcss": "^4.1.18",
    "uuid": "^13.0.0"
  }
}
